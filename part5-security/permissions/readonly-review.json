{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "defaultMode": "dontAsk",
  "permissions": {
    "deny": [
      "Bash",
      "Edit",
      "Write",
      "WebFetch",
      "mcp__*"
    ],
    "allow": [
      "Read(./src/**)",
      "Read(./tests/**)",
      "Grep",
      "Glob"
    ]
  }
}
